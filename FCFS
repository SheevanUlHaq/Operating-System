#include<stdio.h>
#include<conio.h>

int tim=0;

int main(){
	n,b[20],i,j,tw=0,taround[20],tt=0;
	float avw ,avt;
	printf("\nEnter the number of processes: ");
	scanf("%d",&n);
	for(i=1;i<=n;i++)
	{
		printf("\nEnter the burst time of process ",i," : ");
		scanf("%d",b[i]);
	}
	for(i=1;i<=n;i++)
	{
		w[i]=tim;
		for(j=1;j<b[i];j++){
			tim++;
			if(j==b[i])
				taround[i]=tim;
		}
	}
	for(i=1;i<=n;i++)	
	{
		tw=tw+w[i];
	}
	avw=(float)tw/n;
	for(i=1;i<=n;i++)
	{
		tt=tt+taround[i];
	}
	avt=(float)tt/n;
	printf("\nWaiting Times and Turn Around Times of the Processes");
	printf("\n****************************************************");
	for(i=1;i<=n;i++)
	{
		printf("\Process:",i,"-->"," Waiting Time: ",w[i], " , ","Turn Around Time: ",taround[i];
	}
	printf("\n\nAverage Waiting Time: ",avw);
	printf("\n\nAverage Turn Around Time: ",avt);
	return 0;
}

	




